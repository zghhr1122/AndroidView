<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/buttonPanel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#cbcbca"
                android:padding="12dp"
                android:text="属性动画一(加载属性动画)" />

            <TextView
                android:id="@+id/buttonPane2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#cbcbca"
                android:padding="12dp"
                android:text="属性动画二(图片搜索动画)" />

            <TextView
                android:id="@+id/buttonPane3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#cbcbca"
                android:padding="12dp"
                android:text="waveView动画" />


            <TextView
                android:id="@+id/buttonPane4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#cbcbca"
                android:padding="12dp"
                android:text="waveView 线条动画" />

            <TextView
                android:id="@+id/buttonPane5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#cbcbca"
                android:padding="12dp"
                android:text="实现类似cardView的阴影" />


            <TextView
                android:id="@+id/buttonPane6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#cbcbca"
                android:padding="12dp"
                android:text="点赞动画的实现。" />


        </LinearLayout>


    </ScrollView>


</RelativeLayout>